# secondary Neopixels
opt_enable \
    NEOPIXEL2_SEPARATE \
    NEOPIXEL2_STARTUP_TEST \
    NEO2_COLOR_PRESETS \
    NEO2_USER_PRESET_STARTUP

opt_set NEOPIXEL2_TYPE "NEO_RGB"
opt_set NEOPIXEL2_PIN PB0
opt_set NEOPIXEL2_PIXELS 8
opt_set NEOPIXEL2_BRIGHTNESS 127
# default color
opt_set NEO2_USER_PRESET_RED 255
opt_set NEO2_USER_PRESET_GREEN 255
opt_set NEO2_USER_PRESET_BLUE 255
opt_set NEO2_USER_PRESET_BRIGHTNESS 127

echo "- Configured for 8 Neopixels" >> README.md
