opt_set EXTRUDERS "0"
opt_set DEFAULT_MAX_FEEDRATE "{ 50, 50, 15 }"
opt_set DEFAULT_MAX_ACCELERATION "{ 180, 180, 80 }"
opt_set MANUAL_FEEDRATE "{ 50*60, 50*60, 4*60 }"
opt_set AXIS_RELATIVE_MODES "{ false, false, false }"


# Apparently the following "USE_*_PLUG settings are no longer needed and should be removed."
# See https://github.com/MarlinFirmware/Marlin/blob/bugfix-2.1.x/Marlin/src/inc/Changes.h#L651
#    USE_XMAX_PLUG \
#    USE_YMAX_PLUG \

opt_enable \
    MIN_SOFTWARE_ENDSTOPS \
    SOFT_ENDSTOPS_MENU_ITEM \
    INVERT_X2_VS_X_DIR \
    X_DUAL_ENDSTOPS \
    INVERT_Y2_VS_Y_DIR \
    Y_DUAL_ENDSTOPS

echo "- Configured for Dual XY" >> README.md
